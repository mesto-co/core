        "allOf": [{ "$ref": "#RequestBase" }],
        "properties": {
            "id": { "type": "number" }
        },
        "required": [ "id" ]
    },
    {
        "$id": "#GET>/v1/test/",
        "allOf": [{ "$ref": "#RequestBase" }],
        "properties": {}
    },
    {
        "$id": "#POST>/v1/test/",
        "allOf": [{ "$ref": "#RequestBase" }],
        "properties": {
            "fieldA": { "type": "number" },
            "fieldB": { "type": "string" }
        },
        "required": [ "fieldA", "fieldB" ]
    },
    {
        "$id": "#GET>/v1/profile/search/",
