        "$id": "#GET>/v1/test/",
        "allOf": [{ "$ref": "#RequestBase" }],
        "properties": {}
    },
    {
        "$id": "#POST>/v1/test/",
        "allOf": [{ "$ref": "#RequestBase" }],
        "properties": {
            "fieldA": { "type": "number" },
            "fieldB": { "type": "string" }
        },
        "required": [ "fieldA", "fieldB" ]
    },
    {
        "$id": "#POST>/v1/profile/search/",
        "allOf": [{ "$ref": "#RequestBase" }],
        "properties": {
           "query": {
                "type": "array",
                "items":
                {
                    "type" : "object",
                    "additionalProperties": false,
                    "properties" : {
                        "fullName" :  {
                            "type" : "string",
                            "maxLength":255
                        },
                        "username" : {
                            "type" : "string",
                            "maxLength":30
                        },
                        "location" : {
                            "type" : "string",
                            "maxLength":255
                        },
                        "about" : {
                            "type" : "string",
                            "maxLength":6000
                        },
                        "role" : {
                            "type" : "string",
                            "maxLength":255
                        },
                        "skills" : {
                            "type" : "string",
                            "maxLength":255
                        }
                    }
                }
           },
           "currentPage": { "type": "number","default": 1 },
           "perPage": { "type": "number","default": 20, "maximum": 1000  }
        },
         "required": [ "query"]
    },
    {
      "$id": "#GET>/v1/users/:id",
      "allOf": [{ "$ref": "#RequestBase" }],
      "properties": {
        "id": { "type": "string", "format": "uuid" }
