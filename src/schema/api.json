        "properties": {
            "id": { "type": "number" }
        },
        "required": [ "id" ]
    },
    {
        "$id": "#PUT>/v1/test/:id",
        "allOf": [{ "$ref": "#RequestBase" }],
        "properties": {
            "id": { "type": "number" },
            "fieldA": { "type": "number" },
            "fieldB": { "type": "string" }
        },
        "required": [ "id", "fieldA", "fieldB" ]
    },
    {
