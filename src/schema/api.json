        "email": { "type": "string", "format": "email" }
      },
      "required": [ "email" ]
    },
    {
      "$id": "#POST>/v1/email/sendMagicLink",
      "allOf": [{ "$ref": "#RequestBase" }],
      "properties": {
        "email": { "type": "string", "format": "email" },
        "tokenId": { "type": "string", "format": "uuid" }
      },
      "required": [ "email", "tokenId" ]
    },
    {
      "$id": "#POST>/v1/auth/refresh",
      "allOf": [{ "$ref": "#RequestBase" }],
